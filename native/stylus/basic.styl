@font-face
   font-family Merriweather
   font-style normal
   src url('http://fonts.googleapis.com/css?family=Merriweather:400,300')

body
  font-family Merriweather, sans-serif

//normal menu
#menu
  max-width 1024px
  margin 0 auto
  position absolute
  top -50px
  opacity 0
  transition all 1.5s
  left 50%
  transform translateX(-50%)
  z-index 10
  &.ui.secondary.pointing.menu
    border-bottom none

#menu.opened
  top 80px
  opacity 1

#menu.fixed
  position fixed
  top 0
  transition none


#menu 
  &.ui.menu .item
    color rgba(255, 255, 255, 0.8)
    transition all 1.5s
    &:hover
      color #00B5AD
  
//mobile menu
#m_btn 
  display none



/**** Header ****/
header
  height 100vh
  min-height 800px
  background-image: url("../img/bg7.jpg")
  transition all 5000 ease
  width 100%
  background-size cover
  background-repeat no-repeat
  background-attachment fixed
  position relative
  &:before
    content ""
    display block
    width 100%
    height 100%
    background-color rgba(0,181,173,0.2)
  hgroup
    text-align center
    color white
    position absolute
    top 40%
    left 50%
    transform translateX(-50%)
    h1, h2
      font-weight normal
      font-family Merriweather, sans-serif
      



/**** Main ****/
main
  section
    min-height 100vh
    &#about
      position relative
      .image-show
        height 100vh
        position absolute
        .hover-mask
          display none
          position absolute
          width 100%
          height 100%
          background-color rgba(255, 255, 255, 0.33)
          z-index 2
        .slider-nav-control
          display none
          font-size 40px
          color rgba(255, 255, 255, 0.6)
          width 100%
          position absolute
          top 50%
          transform translateY(-50%)
          z-index 2
          .chevron.left.icon
            cursor pointer
            position relative
            left 1rem
          .chevron.right.icon
            cursor pointer
            position absolute
            right 1rem
        .owl-controls
          position absolute
          bottom 1rem
          left 50%
          transform translateX(-50%)
        &.fixed
          position fixed
          top 0
        &.finishFixed
          bottom 0
        .slider-item
          background-size cover
          background-repeat no-repeat
          background-position 50% 50%
          height 100vh
          &#slider-item1
            background-image url("../img/bg1.jpg")
            background-color raga(blue,0.8)
            background-blend-mode overlay
          &#slider-item2
            background-image url("../img/bg2.jpg")
          &#slider-item3
            background-image url("../img/bg3.jpg")
      .desc
        min-height 200vh
        background-color transparent
        padding 100px 150px
        .big-head
          margin-bottom 5rem
          text-align center
          img
            border-radius 100%
        h2, p, li
          font-family Merriweather
        h2
          margin-bottom 3rem
          font-weight normal
          
    &#skill
      position relative
      .gallery-container
        background-color white
        .gallery-inner-container
          height 100vh
          & > .row
            height 100vh
            // padding 10%
            & > div[class*="u"]
             height 50%
             text-align center
      .choice-container
        height 100vh
        // padding 100px
        position absolute
        right 0
        background-color white
        .row
          height 100vh
          // padding-top calc((100vh - 50vw)/2)
         .choice-item
           // height 25vw
           // padding 1.5rem
           .choice-inner
             background-color #C3C3C3
             // height 100%
             text-align center
             img
               width 100%
               margin-top 1rem
    &#portfolio
      background-color green




